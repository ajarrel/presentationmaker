{
	"background":{
		"scripts": ["main.js"],
		"persistent": false
	},
	
	"manifest_version": 2,
	"name": "Presentation Maker",
	"version": "0.101",
	
	"description": "A tool for interfacing with Presentation maker",
	
	"permissions": [
		"alarms",
		"background",
		"clipboardRead",
		"clipboardWrite",
		"desktopCapture",
		"idle",
		"notifications",
		"storage",
		"http://*/*",
		"https://*/*",
		"tabs"
	],
	
	"page_action":{
		"default_title": "Push to Presentation",
		"default_popup": "popup.html"
	}
	
}